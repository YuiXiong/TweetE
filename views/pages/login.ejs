<%- include('../partials/header'); %>



  <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" id="login-form" method="POST" action="/login">
    <div id="page-login" class="min-h-screen" style="background-image: url(/images/login-page.jpeg)">
        <div class="w-full lg:w-6/12 px-4 mx-auto pt-6">
            <div class="relative flex flex-col min-w-0 break-words w-9/12 mb-6 shadow-lg rounded-lg bg-blueGray-200 border-0">
                <div class="mx-3 my-3">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="Email">Email</label>
                    <input class="shadow appearance-none border rounded w-fit py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="email" type="text" placeholder="Email" name="email">

                    <label class="block my-3 text-gray-700 text-sm font-bold mb-2" for="password">Password</label>
                    <input class="shadow appearance-none border border-red-500 rounded w-fit py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="password" type="password" placeholder="******************" name="password">
                    <p class="text-red-500 text-xs italic">Please choose a password.</p>
                    <p class="text-black-500 text-xs italic">Not a user? click <a href="/users/register">here</a> to register</p>
                </div>
            
                <div class="flex items-center justify-between">
                    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">Sign In</button>
                    <a class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" href="#">Forgot Password?</a>
                </div>
            </div>
        </div>
    </div>
</form>
  
</main>

